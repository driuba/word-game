{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"_version": "23.0.0",
	"compilerOptions": {
		"allowArbitraryExtensions": true,
		"baseUrl": "./src",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"ES2024"
		],
		"module": "node18",
		"moduleResolution": "node16",
		"outDir": "./dist",
		"paths": {
			"~/*": [
				"./*"
			]
		},
		"resolveJsonModule": true,
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"target": "ES2024",
		"verbatimModuleSyntax": true
	},
	"display": "word-game",
	"exclude": [
		"./src/migrations/**/*"
	],
	"include": [
		"./src/**/*"
	],
	"ts-node": {
		"esm": true,
		"files": true,
		"scope": true
	}
}
