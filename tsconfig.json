{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "23.0.0",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "es2024"
    ],
    "module": "nodenext",
    "moduleResolution": "node16",
    "outDir": "dist",
    "paths": {
      "core": [
        "./src/core"
      ],
      "entities": [
        "./src/entities"
      ],
      "listeners": [
        "./src/listeners"
      ],
      "utils": [
        "./src/utils"
      ]
    },
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2024"
  },
  "display": "word-game",
  "exclude": [
    "src/migrations/**/*"
  ],
  "include": [
    "src/**/*"
  ]
}
