{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"_version": "23.0.0",
	"compilerOptions": {
		"allowArbitraryExtensions": true,
		"baseUrl": "./src",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [
			"ES2024"
		],
		"module": "Node18",
		"moduleResolution": "node16",
		"outDir": "./dist",
		"paths": {
			"~/*": [
				"./*"
			]
		},
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2024"
	},
	"display": "word-game",
	"exclude": [
		"./src/migrations/**/*"
	],
	"include": [
		"./src/**/*"
	]
}
