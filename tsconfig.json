{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"_version": "23.0.0",
	"compilerOptions": {
		"allowArbitraryExtensions": true,
		"baseUrl": "./src",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "node20",
		"moduleResolution": "node16",
		"outDir": "./dist",
		"paths": {
			"~/*": [
				"./*"
			]
		},
		"resolveJsonModule": true,
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		// esnext is used as a temp fix for set instance method support. When es2025 target is defined this should be changed to that specific version
		"target": "esnext",
		"verbatimModuleSyntax": true
	},
	"display": "word-game",
	"exclude": [
		"./src/migrations/**/*"
	],
	"include": [
		"./src/**/*"
	],
	"ts-node": {
		"esm": true,
		"files": true,
		"scope": true
	}
}
