{
	"$schema": "https://json.schemastore.org/package.json",
	"author": "Andrius Andrikonis",
	"dependencies": {
		"@slack/bolt": "^4.4.0",
		"cron": "^4.3.3",
		"luxon": "^3.7.2",
		"pg": "^8.16.3",
		"reflect-metadata": "^0.2.2",
		"typeorm": "^0.3.27",
		"winston": "^3.17.0"
	},
	"description": "Word game for your slack word game needs",
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@slack/cli-hooks": "^1.2.1",
		"@slack/types": "^2.16.0",
		"@stylistic/eslint-plugin": "^5.4.0",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.5.2",
		"eslint": "^9.36.0",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.44.0",
		"webpack": "^5.101.3",
		"webpack-cli": "^6.0.1"
	},
	"engines": {
		"node": "^24.8.0",
		"pnpm": "^10.17.0"
	},
	"keywords": [
		"word-game",
		"word game"
	],
	"license": "GPL-3.0-or-later",
	"main": "dist/app.js",
	"name": "word-game",
	"scripts": {
		"build:development": "webpack build --config webpack.config.mts --mode development",
		"build:production": "webpack build --config webpack.config.mts --mode production",
		"lint": "eslint --flag unstable_native_nodejs_ts_config .",
		"lint:fix": "pnpm run lint --fix",
		"migrate:development": "pnpm run typeorm:development --transaction each migration:run",
		"migrate:production": "pnpm run typeorm:production --transaction each migration:run",
		"node:development": "node --enable-source-maps --env-file-if-exists .env --env-file-if-exists .env.local --env-file-if-exists .env.development --env-file-if-exists .env.development.local",
		"node:production": "node --enable-source-maps --env-file-if-exists .env --env-file-if-exists .env.local --env-file-if-exists .env.production --env-file-if-exists .env.production.local",
		"start:development": "pnpm run build:development && pnpm run node:development ./dist/app.js",
		"start:production": "pnpm run build:production && pnpm run node:production ./dist/app.js",
		"typeorm:development": "pnpm run node:development --import ./ts-node/register.ts ./node_modules/typeorm/cli.js --dataSource ./src/entities/index.ts",
		"typeorm:production": "pnpm run node:production --import ./ts-node/register.ts ./node_modules/typeorm/cli.js --dataSource ./src/entities/index.ts"
	},
	"sideEffects": false,
	"type": "module",
	"version": "2.0.0"
}
